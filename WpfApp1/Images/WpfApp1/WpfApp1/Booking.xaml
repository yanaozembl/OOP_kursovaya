<Window x:Class="WpfApp1.Booking"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Booking" Height="450" Width="358">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="71,10,0,0" TextWrapping="Wrap" Text="Оставьте данные для бронирования" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="36,46,0,0" TextWrapping="Wrap" Text="Дата заезда" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="35,243,0,0" TextWrapping="Wrap" Text="Срок аренды" VerticalAlignment="Top"/>
        <TextBox x:Name="Rental_period" HorizontalAlignment="Left" Height="23" Margin="35,263,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBlock HorizontalAlignment="Left" Margin="35,304,0,0" TextWrapping="Wrap" Text="Итоговая стоимость: " VerticalAlignment="Top"/>
        <Button Content="Оставить заявку" Click="Button_Send_Click" HorizontalAlignment="Left" Margin="115,337,0,0" VerticalAlignment="Top" Width="108"/>
        <Calendar x:Name="Calendar" DisplayDateStart='2022-02-02' HorizontalAlignment="Left" Margin="36,69,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
