        <Button x:Name="Button_Save_Email" Click="Button_Save_Email_Click" Visibility="Hidden" Content="Сохранить" HorizontalAlignment="Left" Margin="512,217,0,0" VerticalAlignment="Top" Width="75" Background="#FFF6F242" BorderBrush="{x:Null}" Height="21" Foreground="Black" />
        
        <Line Stroke="#FFA09F9F" StrokeThickness="0.5" X1="0" Y1="10" X2="400" Y2="10" Margin="75,236,31.667,165.667"/>
        <TextBlock x:Name="PasswordText" HorizontalAlignment="Left" Margin="75,259,0,0" TextWrapping="Wrap" Text="Пароль" VerticalAlignment="Top" Width="79"/>
        <Button x:Name="Button_Edit_Password" Click="Button_Password_Click" Content="Изменить" HorizontalAlignment="Left" Margin="415,257,0,0" VerticalAlignment="Top" Width="75" Background="{x:Null}" BorderBrush="{x:Null}" Height="21" Foreground="#FF1876A0" />
        
        <TextBlock x:Name="OldPasswordText" Visibility="Hidden" HorizontalAlignment="Left" Margin="75,259,0,0" TextWrapping="Wrap" Text="Старый пароль" VerticalAlignment="Top" Width="90"/>
        <PasswordBox x:Name="OldPassword"  HorizontalAlignment="Left" Visibility="Hidden" Height="23" Margin="191,257,0,0"  VerticalAlignment="Top" Width="170"/>
        <TextBlock x:Name="NewPasswordText" Visibility="Hidden" HorizontalAlignment="Left" Margin="75,290,0,0" TextWrapping="Wrap" Text="Новый пароль" VerticalAlignment="Top" Width="90"/>
        <PasswordBox x:Name="NewPassword" Visibility="Hidden"  HorizontalAlignment="Left"  Height="23" Margin="191,285,0,0"  VerticalAlignment="Top" Width="170"/>
        <TextBlock x:Name="RepeatNewPasswordText" Visibility="Hidden"  HorizontalAlignment="Left" Margin="75,317,0,0" TextWrapping="Wrap" Text="Новый пароль" VerticalAlignment="Top" Width="90"/>
        <PasswordBox x:Name="RepeatNewPassword" Visibility="Hidden" HorizontalAlignment="Left"  Height="23" Margin="191,314,0,0"  VerticalAlignment="Top" Width="170"/>
        <Button x:Name="Button_Cansel_Password" Click="Button_Cansel_Password_Click" Visibility="Hidden" Content="Отмена" HorizontalAlignment="Left" Margin="415,259,0,0" VerticalAlignment="Top" Width="75" Background="{x:Null}" BorderBrush="{x:Null}" Height="21" Foreground="#FF1876A0" />
        <Button x:Name="Button_Save_Password" Click="Button_Save_Password_Click" Visibility="Hidden" Content="Сохранить" HorizontalAlignment="Left" Margin="415,292,0,0" VerticalAlignment="Top" Width="75" Background="#FFF6F242" BorderBrush="{x:Null}" Height="21" Foreground="Black" />
        <TextBlock x:Name="PasswordSuccessText" Visibility="Hidden" HorizontalAlignment="Left" Margin="200,259,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="148"><Run Text="Пароль "/><Run Text="успешно изменен"/></TextBlock> 

    </Grid>
</Window>
